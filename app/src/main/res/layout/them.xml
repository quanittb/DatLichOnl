<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/LayoutFooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/content"
        android:layout_gravity="bottom"
        android:background="#000000"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imgtaikhoan"
            android:layout_width="39dp"
            android:layout_height="34dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/imghoso"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.284"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.229"
            app:srcCompat="@drawable/themht" />

        <TextView
            android:id="@+id/tvtaikhoan"
            android:layout_width="39dp"
            android:layout_height="24dp"
            android:layout_below="@id/imgtrangchu"
            android:layout_toRightOf="@id/tvhoso"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tài khoản"
            android:textColor="#03A9F4"
            android:textSize="7sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTuVan"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imghoso"
            android:layout_width="39dp"
            android:layout_height="34dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/imglichkham"
            android:layout_weight="1"
            android:onClick="hoso"
            app:layout_constraintBottom_toTopOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.284"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.229"
            app:srcCompat="@drawable/hoso" />

        <TextView
            android:id="@+id/tvhoso"
            android:layout_width="39dp"
            android:layout_height="24dp"
            android:layout_below="@id/imgtrangchu"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/tvlichkham"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="hoso"
            android:text="Hồ sơ"
            android:textColor="#FFFFFF"
            android:textSize="7sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTuVan"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imglichkham"
            android:layout_width="39dp"
            android:layout_height="34dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/imgtrangchu"
            android:layout_weight="1"
            android:onClick="lichkham"
            app:layout_constraintBottom_toTopOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.284"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.229"
            app:srcCompat="@drawable/lichkham" />

        <TextView
            android:id="@+id/tvlichkham"
            android:layout_width="39dp"
            android:layout_height="24dp"
            android:layout_below="@id/imgtrangchu"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/tvtrangchu"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="lichkham"
            android:text="Lịch khám"
            android:textColor="#FFFFFF"
            android:textSize="7sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTuVan"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imgtrangchu"
            android:layout_width="39dp"
            android:layout_height="34dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:onClick="trangchu"
            app:layout_constraintBottom_toTopOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.284"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.229"
            app:srcCompat="@drawable/trangchu" />

        <TextView
            android:id="@+id/tvtrangchu"
            android:layout_width="39dp"
            android:layout_height="24dp"
            android:layout_below="@id/imgtrangchu"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Trang chủ"
            android:textColor="#FFFFFF"
            android:textSize="7sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTuVan"
            app:layout_constraintVertical_bias="0.0" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="81dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <LinearLayout
            android:id="@+id/congdong"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="congdong"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvCongDong"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:text="Tham gia cộng đồng QMTP  "
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="> "
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quytrinh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="datlich"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@android:mipmap/sym_def_app_icon" />

            <TextView
                android:id="@+id/textview1"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Quy trình đặt lịch và khám bệnh"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=">"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dangxuat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="dangxuat"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@android:mipmap/sym_def_app_icon" />

            <TextView
                android:id="@+id/textview4"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Đăng xuất"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=">"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>